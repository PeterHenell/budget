FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create uploads directory
RUN mkdir -p uploads

# Install common Python packages that rarely change
# This provides a base layer, specific requirements will be installed at runtime
RUN pip install --no-cache-dir \
    flask \
    psycopg2-binary \
    requests \
    pandas

# The source code and requirements will be mounted as volumes
# Dependencies will be installed at container startup

EXPOSE 5000

# Default command - install requirements and run app with syntax checking
COPY start-web.sh /start-web.sh
RUN chmod +x /start-web.sh
CMD ["sh", "-c", "pip install --no-cache-dir -r requirements.txt && /start-web.sh"]
